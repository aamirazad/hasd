---
const { headings } = Astro.props;
---

<div class="relative glass rounded-lg p-4 w-full">
  <div class="h-full">
    <h2 class="text-2xl border-none">Contents</h2>
    <ul class="list-none m-0">
      {
        headings.map((heading) => (
          <li>
            <a href={`#${heading.id}`} class={`toc-level-${heading.tagName}`}>
              {heading.text}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
