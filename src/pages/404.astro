---
import HomePageLayout from "@/layouts/HomePageLayout.astro";
---

<HomePageLayout title="404">
  <div
    class="flex flex-col items-center justify-center min-h-[70vh] text-center px-4"
  >
    <div class="mb-8 max-w-md mx-auto">
      <div id="error-number" class="text-8xl font-bold text-forest mb-6">
        404
      </div>

      <h1 id="error-title" class="text-3xl font-bold text-green-800 mb-4">
        Page Not Found
      </h1>

      <p id="error-message" class="text-gray-700 text-lg">
        The page you're looking for doesn't exist or was moved.
      </p>
    </div>

    <a
      id="home-button"
      href="/"
      class="px-8 py-3 bg-green-700 text-white rounded-xl hover:bg-green-900 transition-all duration-200 font-medium shadow-lg"
    >
      ‚Üê Go Back Home
    </a>
  </div>
  <script>
    import { gsap } from "gsap";

    document.addEventListener("astro:page-load", () => {
      const tl = gsap.timeline();

      // Set initial states
      gsap.set("#error-number", { scale: 0, rotation: -180 });
      gsap.set("#error-title", { y: 50, opacity: 0 });
      gsap.set("#error-message", { y: 30, opacity: 0 });
      gsap.set("#home-button", { y: 20, opacity: 0 });

      // Animation sequence
      tl.to("#error-number", {
        scale: 1,
        rotation: 0,
        duration: 0.6,
        ease: "back.out(1.7)",
      })
        .to(
          "#error-title",
          {
            y: 0,
            opacity: 1,
            duration: 0.4,
            ease: "power2.out",
          },
          "-=0.3",
        )
        .to(
          "#error-message",
          {
            y: 0,
            opacity: 1,
            duration: 0.4,
            ease: "power2.out",
          },
          "-=0.4",
        )
        .to(
          "#home-button",
          {
            y: 0,
            opacity: 1,
            duration: 0.3,
            ease: "power2.out",
          },
          "-=0.3",
        );
    });
  </script>
</HomePageLayout>
