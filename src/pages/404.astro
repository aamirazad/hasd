---
import BasicLayout from "@/layouts/BasicLayout.astro";
import "@/styles/404.css";
---

<BasicLayout title="404">
  <div class="error-page">
    <div class="main">
      <section class="home">
        <div class="home__container container">
          <div class="home__data">
            <h3 class="home__subtitle">Unknown Zone</h3>
            <h1 class="home__title">ERROR 404</h1>
            <p class="home__description">
              We can't seem to find the page you're looking for, you need to
              come back to earth.
            </p>
            <a href="/" class="home__button">Return To Earth</a>
          </div>

          <div class="home__images">
            <div class="home__blob-1">
              <img
                src="https://cdn.aamira.me/spacecraft.png"
                alt="image"
                class="home__img-1"
              />
            </div>

            <div class="home__blob-2">
              <img
                src="https://cdn.aamira.me/planet-1.png"
                alt="image"
                class="home__img-2"
              />
            </div>

            <div class="home__blob-3">
              <img
                src="https://cdn.aamira.me/planet-2.png"
                alt="image"
                class="home__img-3"
              />
            </div>

            <div class="home__blob-4">
              <img
                src="https://cdn.aamira.me/astronaut.png"
                alt="image"
                class="home__img-4"
              />
            </div>

            <img
              src="https://cdn.aamira.me/ufo.png"
              alt="image"
              class="home__img-5"
            />
          </div>
        </div>
      </section>
    </div>
  </div>
</BasicLayout>
